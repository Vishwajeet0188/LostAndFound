<% layout("layouts/boilerplate") %>

<div class="edit-item-page">
  <div class="container">
    <div class="edit-item-card">

      <h2>Edit Item</h2>

      <form action="/items/<%= item._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="row g-3">

        <!-- TITLE -->
        <div class="col-12">
          <label class="form-label">Item Name</label>
          <input type="text" name="title" value="<%= item.title %>" class="form-control" required>
        </div>

        <!-- DESCRIPTION -->
        <div class="col-12">
          <label class="form-label">Description</label>
          <textarea name="description" class="form-control" required><%= item.description %></textarea>
        </div>

        <!-- LOCATION -->
        <div class="col-12">
          <label class="form-label">Location</label>
          <input type="text" name="location" value="<%= item.location %>" class="form-control">
        </div>

        <!-- CATEGORY -->
        <div class="col-12">
          <label class="form-label">Category</label>
          <input type="text" name="category" value="<%= item.category %>" class="form-control">
        </div>

        <!-- REWARD -->
        <div class="col-12">
          <label class="form-label">Reward</label>
          <input type="number" name="reward" value="<%= item.reward %>" class="form-control">
        </div>

      

<% if (item.image) { %>
  <img 
    src="<%= item.image %>" 
    alt="Current Image"
    style="width:150px; margin-bottom:10px; border-radius:8px;"
  >
<% } %>
      <!-- UPLOAD NEW IMAGE -->
      <div class="mb-3">
        <label class="form-label">Upload New Image</label>
        <input 
          type="file" 
          name="image" 
          class="form-control"
          accept="image/*"
        >
      </div>


        <!-- STATUS -->
        <div class="col-12 ">
          <label class="form-label">Item Status</label>

          <div class="status-box">

              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="status"
                  id="status-lost"
                  value="lost"
                  <%= item.status === "lost" ? "checked" : "" %>>
                <label class="form-check-label" for="status-lost">
                  Lost
                </label>
              </div>
              <br>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="status"
                  id="status-found"
                  value="found"
                  <%= item.status === "found" ? "checked" : "" %>>
                <label class="form-check-label" for="status-found">
                  Found
                </label>
              </div>

            </div>


        <!-- SUBMIT -->
        <div class="col-12 mt-4">
          <button class="btn btn-primary w-100">Save Changes</button>
        </div>

      </form>

    </div>
  </div>
</div>



<!-- css  -->

<style>

.edit-item-page {
  min-height: 100vh;
  padding: 40px 0;
  background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
}

/* Form card */
.edit-item-card {
  background: #ffffff;
  border-radius: 16px;
  padding: 30px;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
  animation: slideFade 0.6s ease;
}

/* Page title */
.edit-item-card h2 {
  text-align: center;
  font-weight: 700;
  margin-bottom: 25px;
  color: #333;
}

/* Labels */
.edit-item-card .form-label {
  font-weight: 600;
  color: #555;
}

/* Inputs & textarea */
.edit-item-card .form-control {
  border-radius: 10px;
  padding: 10px 12px;
  border: 1px solid #ddd;
  transition: all 0.25s ease;
}

.edit-item-card .form-control:focus {
  border-color: #4facfe;
  box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.25);
}

/* Textarea */
.edit-item-card textarea {
  resize: none;
  min-height: 120px;
}

/* Radio buttons container */
.status-box {
  display: flex;
  gap: 20px;
  margin-top: 5px;
}

/* Custom radio buttons */
.status-box .form-check {
  background: #f1f3f6;
  padding: 12px 18px;
  border-radius: 30px;
  cursor: pointer;
  transition: 0.3s ease;
}

.status-box .form-check:hover {
  background: #e2e8f0;
}

.status-box .form-check-input {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}
.status-box .form-check-label {
  cursor: pointer;
  padding: 8px 18px;
  border-radius: 30px;
  display: inline-block;
}


.status-box .form-check-input:checked + .form-check-label {
  color: #fff;
  font-weight: 600;
}

.status-box .form-check-input[value="lost"]:checked + .form-check-label {
  background: #ff6b6b;
  padding: 8px 18px;
  border-radius: 30px;
}

.status-box .form-check-input[value="found"]:checked + .form-check-label {
  background: #2ecc71;
  padding: 8px 18px;
  border-radius: 30px;
}

/* Image preview */
.image-preview {
  margin-top: 10px;
  display: none;
}

.image-preview img {
  width: 100%;
  max-height: 220px;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

/* Submit button */
.edit-item-card .btn-primary {
  border-radius: 30px;
  padding: 12px;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border: none;
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.edit-item-card .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(102, 126, 234, 0.45);
}

/* Animation */
@keyframes slideFade {
  from {
    opacity: 0;
    transform: translateY(25px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Mobile */
@media (max-width: 576px) {
  .edit-item-card {
    padding: 20px;
  }
}

</style>
