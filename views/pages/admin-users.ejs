<% layout("layouts/boilerplate") %>

<div class="container-fluid mt-4">
  <h1 class="mb-4">
    <i class="fas fa-users me-2"></i>Manage Users
  </h1>
  
  <a href="/admin/dashboard" class="btn btn-secondary mb-3">
    <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
  </a>
  
  <!-- Flash Messages -->
  <% if (success_msg) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <% if (error_msg) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover admin-users-table">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Status</th>
              <th>Joined</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <% if (user.profilePicture) { %>
                      <img src="<%= user.profilePicture %>" 
                           class="rounded-circle me-2 user-avatar"
                           alt="<%= user.name %>"
                           onerror="this.style.display='none'">
                    <% } else { %>
                      <div class="rounded-circle me-2 user-avatar bg-secondary d-flex align-items-center justify-content-center">
                        <i class="fas fa-user text-white"></i>
                      </div>
                    <% } %>
                    <div>
                      <strong><%= user.name %></strong>
                      <% if (user._id.toString() === currentUser._id.toString()) { %>
                        <span class="badge bg-info ms-1">You</span>
                      <% } %>
                    </div>
                  </div>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if (user.role === 'admin') { %>
                    <span class="badge bg-warning">
                      <i class="fas fa-crown me-1"></i>Admin
                    </span>
                  <% } else { %>
                    <span class="badge bg-primary">
                      <i class="fas fa-user me-1"></i>User
                    </span>
                  <% } %>
                </td>
                <td>
                  <% if (user.isActive) { %>
                    <span class="badge bg-success">
                      <i class="fas fa-check-circle me-1"></i>Active
                    </span>
                  <% } else { %>
                    <span class="badge bg-secondary">
                      <i class="fas fa-times-circle me-1"></i>Inactive
                    </span>
                  <% } %>
                </td>
                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                <td>
                  <div class="btn-group" role="group">
                    <!-- Toggle Status Button -->
                    <form action="/admin/users/<%= user._id %>/toggle-status" method="POST" class="d-inline">
                      <% if (user.isActive) { %>
                        <button type="submit" class="btn btn-sm btn-warning" title="Deactivate User">
                          <i class="fas fa-user-slash"></i>
                        </button>
                      <% } else { %>
                        <button type="submit" class="btn btn-sm btn-success" title="Activate User">
                          <i class="fas fa-user-check"></i>
                        </button>
                      <% } %>
                    </form>
                    
                    <!-- Make Admin/User Button -->
                    <% if (user._id.toString() !== currentUser._id.toString()) { %>
                      <% if (user.role === 'user') { %>
                        <form action="/admin/users/<%= user._id %>/make-admin" method="POST" class="d-inline ms-1">
                          <button type="submit" class="btn btn-sm btn-warning" title="Make Admin">
                            <i class="fas fa-user-shield"></i>
                          </button>
                        </form>
                      <% } else { %>
                        <form action="/admin/users/<%= user._id %>/make-user" method="POST" class="d-inline ms-1">
                          <button type="submit" class="btn btn-sm btn-secondary" title="Make Regular User">
                            <i class="fas fa-user"></i>
                          </button>
                        </form>
                      <% } %>
                    <% } else { %>
                      <button class="btn btn-sm btn-outline-secondary ms-1" disabled title="Cannot modify own role">
                        <i class="fas fa-user-lock"></i>
                      </button>
                    <% } %>
                    
                    <!-- Delete Button -->
                    <% if (user._id.toString() !== currentUser._id.toString()) { %>
                      <form action="/admin/users/<%= user._id %>/delete" method="POST" class="d-inline ms-1">
                        <button type="submit" class="btn btn-sm btn-danger delete-user-btn" title="Delete User" data-username="<%= user.name %>">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    <% } else { %>
                      <button class="btn btn-sm btn-outline-danger ms-1" disabled title="Cannot delete yourself">
                        <i class="fas fa-trash"></i>
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
            
            <% if (users.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center py-4">
                  <i class="fas fa-users fa-2x text-muted mb-3"></i>
                  <p class="text-muted">No users found</p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<style>
  .admin-users-table th {
    font-weight: 600;
    padding: 12px 15px;
  }
  
  .admin-users-table td {
    padding: 12px 15px;
    vertical-align: middle;
  }
  
  .user-avatar {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border: 2px solid #dee2e6;
  }
  
  .user-avatar.bg-secondary {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
  }
  
  .btn-group .btn {
    padding: 5px 10px;
    margin: 0 2px;
  }
  
  .btn-group .btn:hover {
    transform: translateY(-2px);
    transition: all 0.2s ease;
  }
  
  @media (max-width: 768px) {
    .user-avatar {
      width: 30px;
      height: 30px;
    }
    
    .btn-group .btn {
      padding: 4px 8px;
      font-size: 0.8rem;
    }
    
    .btn-group {
      display: flex;
      flex-wrap: wrap;
      gap: 3px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Delete confirmation
    document.querySelectorAll('.delete-user-btn').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const userName = this.getAttribute('data-username');
        const form = this.closest('form');
        
        if (confirm(`Are you sure you want to delete "${userName}"?\n\nThis action cannot be undone.`)) {
          form.submit();
        }
      });
    });
    
    // Toggle status confirmation
    document.querySelectorAll('form[action*="/toggle-status"] button[type="submit"]').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const userName = this.closest('tr').querySelector('strong').textContent;
        const isActive = this.classList.contains('btn-warning'); // Deactivate button is warning color
        const action = isActive ? 'deactivate' : 'activate';
        const form = this.closest('form');
        
        if (confirm(`Are you sure you want to ${action} "${userName}"?`)) {
          form.submit();
        }
      });
    });
    
    // Make admin confirmation
    document.querySelectorAll('form[action*="/make-admin"] button[type="submit"]').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const userName = this.closest('tr').querySelector('strong').textContent;
        const form = this.closest('form');
        
        if (confirm(`Make "${userName}" an admin?\n\nThis user will have full administrative privileges.`)) {
          form.submit();
        }
      });
    });
    
    // Make user confirmation
    document.querySelectorAll('form[action*="/make-user"] button[type="submit"]').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const userName = this.closest('tr').querySelector('strong').textContent;
        const form = this.closest('form');
        
        if (confirm(`Remove admin privileges from "${userName}"?\n\nThis user will become a regular user.`)) {
          form.submit();
        }
      });
    });
  });
</script>