<% layout("layouts/boilerplate") %>

<div class="container-fluid mt-4">
  <h1 class="mb-4">üìä Admin Dashboard</h1>
  
  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <h2><%= stats.totalUsers %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-success text-white">
        <div class="card-body">
          <h5 class="card-title">Total Items</h5>
          <h2><%= stats.totalItems %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-warning text-dark">
        <div class="card-body">
          <h5 class="card-title">Found Items</h5>
          <h2><%= stats.foundItems %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="card bg-info text-white">
        <div class="card-body">
          <h5 class="card-title">Total Rewards</h5>
          <h2>‚Çπ<%= stats.totalRewards %></h2>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Items -->
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>üìù Recent Items</h5>
        </div>
        <div class="card-body">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Item</th>
                <th>Owner</th>
                <th>Status</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% recentItems.forEach(item => { %>
                <tr>
                  <td><a href="/items/<%= item._id %>"><%= item.title %></a></td>
                  <td><%= item.owner?.name || 'Unknown' %></td>
                  <td><span class="badge bg-<%= item.status === 'found' ? 'success' : 'warning' %>"><%= item.status %></span></td>
                  <td><%= new Date(item.createdAt).toLocaleDateString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <!-- Recent Users -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>üë• Recent Users</h5>
        </div>
        <div class="card-body">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Joined</th>
              </tr>
            </thead>
            <tbody>
              <% recentUsers.forEach(user => { %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'primary' %>"><%= user.role %></span></td>
                  <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Links -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Quick Actions</h5>
          <a href="/admin/users" class="btn btn-primary me-2">Manage Users</a>
          <a href="/admin/items" class="btn btn-success me-2">Manage Items</a>
          <a href="/" class="btn btn-secondary">Back to Site</a>
        </div>
      </div>
    </div>
  </div>
</div>




